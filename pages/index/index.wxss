page{ background-color: rgb(246, 246, 246); }
scroll-view{ height: 100%; }

.skeleton-group{ display: table;width: 100%;box-sizing: border-box;min-height: 200rpx;background-color: #FFFFFF;margin-top: 30rpx; }
.skeleton-group-cover,
.skeleton-group-text{ display: table-cell;vertical-align: middle; }

.skeleton-group-cover{ padding: 30rpx 10rpx;width: 120rpx;border-radius: 4rpx; }
.skeleton-group-cover:before{ content: "";display: block;background-color: rgb(201, 201, 201);height: 200rpx;width: 200rpx;border-radius: 6rpx; }

.skeleton-group-text{ padding: 10rpx; }
.skeleton-group-title{ background-color: rgb(201, 201, 201);width:260rpx;height:50rpx; }

.skeleton-group-desc:before,
.skeleton-group-desc > view,
.skeleton-group-desc:after{ content: "";display: block;width: 100%;height: 30rpx;background-color: rgb(201, 201, 201);margin-top: 20rpx;border-radius: 4rpx; }

.skeleton-group-desc:after{ width: 80%; }