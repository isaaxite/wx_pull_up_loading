.isaac-spinner{ height: 0;display: flex;align-items: center;justify-content: center;overflow: hidden;transition: height 0.1s ease-in-out; }
.isaac-spinner-active{ height: 120rpx; }

.isaac-spinner-body > view { width: 24rpx;height: 24rpx;background-color: #000000;margin: 0 6rpx;border-radius: 100%;display: inline-block;
-webkit-animation: bouncedelay 1.4s infinite ease-in-out;animation: bouncedelay 1.4s infinite ease-in-out;-webkit-animation-fill-mode: both;animation-fill-mode: both; }
 
.isaac-spinner-body .bounce1 { animation-delay: -0.32s; }
 
.isaac-spinner-body .bounce2 { animation-delay: -0.16s; }
 
@-webkit-keyframes bouncedelay {
  0%, 80%, 100% { -webkit-transform: scale(0.0) }
  40% { -webkit-transform: scale(1.0) }
}
 
@keyframes bouncedelay {
  0%, 80%, 100% {
    transform: scale(0.0);
    -webkit-transform: scale(0.0);
  } 40% {
    transform: scale(1.0);
    -webkit-transform: scale(1.0);
  }
}